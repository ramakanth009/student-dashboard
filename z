  // Primary sun gradient variations
export const sunGradients = {
  // Main diagonal gradient (matching the image)
  primary: "linear-gradient(135deg, #FFB800 0%, #FF8A00 100%)",
  
  // Horizontal variation
  horizontal: "linear-gradient(90deg, #FFB800 0%, #FF8A00 100%)",
  
  // Vertical variation
  vertical: "linear-gradient(180deg, #FFB800 0%, #FF8A00 100%)",
  
  // Radial variation (for circular effects)
  radial: "radial-gradient(circle, #FFB800 0%, #FF8A00 100%)",
  
  // Three-color variation
  tricolor: "linear-gradient(135deg, #FFB800 0%, #FF8A00 50%, #FF6B00 100%)",
  
  // Soft variation
  soft: "linear-gradient(135deg, #FFC837 0%, #FF8008 100%)",
  
  // Vibrant variation
  vibrant: "linear-gradient(135deg, #FFD700 0%, #FF7000 100%)",
  
  // Subtle variation
  subtle: "linear-gradient(135deg, #FFB800 0%, #FFA500 100%)",
};

