};

// Usage example in a styled component or CSS:
const styleExamples = {
  // For main container
  container: {
    background: sunGradients.primary,
  },
  
  // For button
  button: {
    background: accentGradients.button,
    "&:hover": {
      background: accentGradients.buttonHover,
    },
    "&:active": {
      background: accentGradients.buttonActive,
    },
  },
  
  // For background
  background: {
    background: backgroundGradients.light,
  },
};

